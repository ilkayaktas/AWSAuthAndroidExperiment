<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <EditText
            android:layout_width="243dp"
            android:layout_height="40dp"
            android:hint="Email"
            android:id="@+id/username"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="84dp"
            app:textAllCaps="false"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"
            android:inputType="text"/>
    <EditText
            android:layout_width="243dp"
            android:layout_height="40dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:id="@+id/password"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="84dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/username"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/password"
            app:layout_constraintEnd_toEndOf="@+id/password"
            android:onClick="loginAction"
    />
    <Button
            android:text="I Don't Have Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintEnd_toEndOf="@+id/button"
            android:onClick="dontHaveAccount"
    />
    <Button
            android:text="Forgot Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/button2" app:layout_constraintEnd_toEndOf="@+id/button2"
            android:onClick="forgotPassword"
    />
</androidx.constraintlayout.widget.ConstraintLayout>